<div class="columns  is-gapless is-multiline game-link">
    <div class="column is-12 ">

        <div class="block">
            <div class="level panel">
                <p class='panel-heading level-item is-1'>Game ID:{{game.id}} on {{game.gameDate}}</p>
                
            </div>            
            {{#if game.win}}
            <div class="level panel is-success">
<p class='panel-heading level-item'>Statistics for {{game.user.username}}</p>
                <p class="panel-heading level-item">Date: {{game.gameDate}} </p>
                <p class="panel-heading level-item">Win</p>
                {{else}}
                <div class="level panel is-danger">
                    <p class='panel-heading level-item'>Statistics for {{game.user.username}}</p>
                    <p class="panel-heading level-item">Date: {{game.gameDate}} </p>
                    <p class="panel-heading level-item">Loss</p>
                    {{/if}}
                </div>
                <div class="box">
                    <div class="level">
                        <div class="level-item">
                            <div class="">
                                <div class="heading">Score</div>
                                <div class="title is-5">{{game.score}}</div>
                            </div>
                        </div>
                        <div class="level-item">
                            <div class="">
                                <div class="heading">Points</div>
                                <div class="title is-5">{{game.points}}</div>
                            </div>
                        </div>

                        <div class="level-item">
                            <div class="">
                                <div class="heading">Assists</div>
                                <div class="title is-5">{{game.assists}}</div>
                            </div>
                        </div>
                        <div class="level-item">
                            <div class="">
                                <div class="heading">Rebounds</div>
                                <div class="title is-5">{{game.rebounds}}</div>
                            </div>
                        </div>
                    </div>
                    <p>Additional comments:</p>
                    <div class="box">
                        <p>{{game.notes}}</p>
                    </div>
                    {{#if game.updatedAt}}
                    <p class="heading">>Updated {{game.updatedAt}}</p>
                    {{else}}
                    <p class="heading">Added {{game.createdAt}}</p>
                    {{/if}}
                </div>

            </div>
        </div>
    </div>
