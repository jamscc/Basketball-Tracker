<p id="feedback"></p>




<main class="column">
    <div class="level button is-static is-large is-fullwidth">
        <div class="level-left">
            <div class="level-item">
                <div class="title">{{user.username}}</div>
            </div>
        </div>
        <div class="level-right">
            <div class="level-item">
                <button type="button" class="button is-small">
                    {{user.email}}
                </button>
            </div>
        </div>
    </div>
    <div class="columns is-multiline">
        <div class="column">
            <div class="level panel is-warning compare-link">
                    <p id="game-id" hidden>{{user.id}}</p>
                    <p class="button is-warning is-large level-item">Side-by-side Comparison</p>
                </div>
            <div class="block">
                <div class="level panel">
                    <p class="panel-heading level-item">Performance Statistics</p>
                </div>


                <div class="columns is-multiline ">
                    <div class="column">
                        <div class="box">
                            <div class="level">
                                <div class="heading level-item">Win Rate</div>
                                <div class="title level-item">{{user.win_percentage}}%</div>
                            </div>
                            <div class="level">
                                <div class="level-item">
                                    <div class="">
                                        <div class="heading">Total Wins</div>
                                        <div class="title is-5">{{user.total_wins}}</div>
                                    </div>
                                </div>
                                <div class="level-item">
                                    <div class="">
                                        <div class="heading">Total Games</div>
                                        <div class="title is-5">{{user.total_games}}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="column">
                        <div class="box">
                            <div class="level">
                                <div class="heading level-item">Total Points</div>
                                <div class="title level-item">{{user.total_points}}</div>
                            </div>
                            <div class="level">
                                <div class="level-item">
                                    <div class="">
                                        <div class="heading">Avg Points Per Game</div>
                                        <div class="title is-5">{{user.avg_points_per_game}}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="column">
                        <div class="box">
                            <div class="level">
                                <div class="heading level-item">Total Assists</div>
                                <div class="title level-item">{{user.total_assists}}</div>
                            </div>
                            <div class="level">
                                <div class="level-item">
                                    <div class="">
                                        <div class="heading">Avg Assists Per Game</div>
                                        <div class="title is-5">{{user.avg_assists_per_game}}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="column">
                        <div class="box">
                            <div class="level">
                                <div class="heading level-item">Total Rebounds</div>
                                <div class="title level-item">{{user.total_rebounds}}</div>
                            </div>
                            <div class="level">
                                <div class="level-item">
                                    <div class="">
                                        <div class="heading">Avg Rebounds Per Game</div>
                                        <div class="title is-5">{{user.avg_rebounds_per_game}}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="columns is-cenetered">
        <div class="column is-two-thirds is-offset-one-fifth">
            <div class="box" style="height: 400px;">
                <canvas id="myChart"></canvas>
            </div>
        </div>
    </div>

    <div class="columns is-multiline">
        <div class="column">
            <div class="block">
                <div class="level panel">
                    <p class="panel-heading level-item">Games Played</p>
                </div>
               
                {{#each games}}
                <div class="columns is-centered is-gapless is-multiline game-link">
                    <p id="game-id" hidden>{{id}}</p>
                    <div class="column is-9">
                        <div class="block">

                            {{#if win}}
                            <div class="level panel is-success">

                                <p class="button is-warning is-large level-item">{{gameDate}} </p>
                                <p class="panel-heading level-item">Win</p>
                                <p class="panel-heading level-item">{{score}}</p>
                                </div>
                                {{else}}
                                <div class="level panel">
                                    <p class="button is-warning is-large level-item">{{gameDate}} </p>
                                    <p class="panel-heading level-item">Loss</p>
                                    <p class="panel-heading level-item">{{score}}</p>
                                </div>
                                    {{/if}}
                                <div class="box">
                                    <div class="level">
                                        <div class="level-item">
                                            <div class="">
                                                <div class="heading">Points</div>
                                                <div class="title is-5 gamePoints">{{points}}</div>
                                            </div>
                                        </div>

                                        <div class="level-item">
                                            <div class="">
                                                <div class="heading">Assists</div>
                                                <div class="title is-5 gameAssists">{{assists}}</div>
                                            </div>
                                        </div>
                                        <div class="level-item">
                                            <div class="">
                                                <div class="heading">Rebounds</div>
                                                <div class="title is-5 gameRebounds">{{rebounds}}</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="box">
                                        <p>{{notes}}</p>
                                    </div>
                                    {{#if updatedAt}}
                                    <p class="heading">>Updated {{updatedAt}}</p>
                                    {{else}}
                                    <p class="heading">Added {{createdAt}}</p>
                                    {{/if}}
                                </div>

                            </div>
                        </div>
                    </div>
                    {{/each}}


                </div>
            </div>
        </div>
</main>
<p id="add-feedback"></p>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="./../js/player.js"></script>
<script src="./../js/graph.js"></script>
<script src="./../js/logout.js"></script>